<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name</p>
  <%= @user.name %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>


<h1>Books</h1>

<% @books.each do |book| %>
  
  <table>
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
    </thead>
    <tbody>
     <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
     </tr>
    </tbody>
  </table>
  
<% end %>