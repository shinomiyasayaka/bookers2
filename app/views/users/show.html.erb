<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>


<h1>Books</h1>

<% @books.each do |book| %>
  
  <table>
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
    </thead>
    <tbody>
     <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
     </tr>
    </tbody>
  </table>
  
<% end %>