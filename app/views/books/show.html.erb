<%= flash[:notice] %>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
     <%= render 'users/list', user: @user %>
     <%= render 'books/list', book: @book_new %>
  </div>

  <div class="col-md-8 offset-md-1">
<h1>Book detail</h1>

<table class="table">
  <tbody>
    <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
      <td><%= @user.name %></td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <td><% if @book.user == current_user %>
      <td><a class="btn btn-sm btn-success"><%= link_to "Edit", edit_book_path(@book.id) %></a></td>
      <td><a class="btn btn-sm btn-danger"><%= link_to "destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></a></td>
          <% end %>
    </tr>
  </tbody>
</table>