<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create book' %>
<% end %>


<h1>Books</h1>

<% @books.each do |book| %>

  <table>
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    </thead>
    <tbody>
    <tr>
    <td><%= image_tag '/bookers2/app/assets/sample-author1.jpg' %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
    </tr>
    </tbody>
  </table>
<% end %>