<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/5b87abe1b8.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
            <a class="navbar-brand"><span>Bookers</span></a>
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
             <li><i class="fa-solid fa-home"></i><%= link_to "Home", user_path(current_user.id) %></li>
             <li><i class="fa-solid fa-users"></i><%= link_to "users", users_path %></li>
             <li><i class="fa-solid fa-book-open"></i><%= link_to "Books", books_path %></li>
             <li><i class="fa-solid fa-sign-out-alt"></i><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          <% else %>
             <li><i class="fa-solid fa-home"></i><%= link_to "Home", top_path %></li>
             <li><i class="fa-solid fa-link"></i><%= link_to "About", about_path %></li>
             <li><i class="fa-solid fa-user-plus"></i><%= link_to "Sign up", new_user_registration_path %></li>
             <li><i class="fa-solid fa-sign-in-alt"></i><%= link_to "Log in", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </header>
  <main>
    <%= yield %>
    </main>
  <footer>
   <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
   </div>
  </footer>

  </body>
</html>
